<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/creator/dashboard.css">
</head>

<body>
    <%- include('../includes/header.ejs') %>
    <main>
        <h1 class="pageTitle">Hi <%=creator.displayName %></h1>
        <div class="dashboard-links">
            <a class="dashboard-links__link" href="/creator/upload-story">Upload New Story</a>
            <a class="dashboard-links__link" href="/creator/edit-profile">Edit Profile</a>
            <a class="dashboard-links__link" href="/creator/manage-payment">Manage Payments</a>
        </div>

        <section class="stories">
            <h2>Your Creations</h2>
            <% for (const story of stories) { %>
            <a href="/creator/story-details/<%=story.id%>" class="stories__story">
                <div>
                    <h3><%=story.title %></h3>
                </div>
            </a>
            <% } %>
        </section>

    </main>
    <%- include('../includes/foot.ejs') %>