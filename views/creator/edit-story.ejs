<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/shop/stories.css">
</head>

<body>
    <%- include('../includes/header.ejs') %>
    <main>
        <h1>edit-story.ejs</h1>
        <div>
            <form action="/creator/edit-story" method="POST">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="<%=story.title%>" required>
                <label for="body">Story</label>
                <textarea id="body" name="body" rows="10" placeholder="Copy and paste your story or description here"
                    required><%=story.body%></textarea>
                <label for="audioFile">Change Audio File</label>
                <input type="file" id="audioFile" name="audioFile">
                <button type="submit">Submit</button>
            </form>
        </div>

    </main>
    <%- include('../includes/foot.ejs') %>