<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <%- include('../includes/header.ejs') %>
    <main>
        <h1 class="main__header">Welcome!</h1>
        <div class="flash"><%=flashError %></div>
        <div class="card">
            <form action="/auth/creator-signup" method="POST">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                <div class="form__input-group">
                    <label class="form__label" for="displayName">Display Name</label>
                    <input class="form__input" type="text" id="displayName" name="displayName" autocomplete="off" required>
                </div>
                <div class="form__input-group">
                    <label class="form__label" for="email">Email</label>
                    <input  class="form__input" type="email" id="email" name="email" autocomplete="email" required>
                </div>
                <div class="form__input-group">
                    <label class="form__label" for="password">Password</label>
                    <input class="form__input" type="password" id="password" name="password" autocomplete="new-displayName" required>
                </div>
                <div class="form__input-group">
                    <button class="btn" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </main>
    <%- include('../includes/foot.ejs') %>